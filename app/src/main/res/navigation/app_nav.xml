<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/welcomeFragment">

  <fragment
      android:id="@+id/welcomeFragment"
      tools:layout="@layout/fragment_welcome"
      android:name="com.elka.composition.presentatino.WelcomeFragment"
      android:label="WelcomeFragment" >
    <action
        android:id="@+id/action_welcomeFragment_to_choseLevelFragment"
        app:destination="@id/choseLevelFragment" />
  </fragment>
  <fragment
      android:id="@+id/choseLevelFragment"
      tools:layout="@layout/fragment_chose_level"
      android:name="com.elka.composition.presentatino.ChoseLevelFragment"
      android:label="ChoseLevelFragment" >
    <action
        android:id="@+id/action_choseLevelFragment_to_gameFragment"
        app:destination="@id/gameFragment" />
  </fragment>
  <fragment
      android:id="@+id/gameFragment"
      tools:layout="@layout/fragment_game"
      android:name="com.elka.composition.presentatino.GameFragment"
      android:label="GameFragment" >
    <action
        android:id="@+id/action_gameFragment_to_gameFinishedFragment"
        app:destination="@id/gameFinishedFragment"
        app:popUpTo="@id/gameFragment"
        app:popUpToInclusive="true" />
    <argument
        android:name="level"
        app:argType="com.elka.composition.domain.entity.Level" />
  </fragment>
  <fragment
      android:id="@+id/gameFinishedFragment"
      tools:layout="@layout/fragment_game_finished"
      android:name="com.elka.composition.presentatino.GameFinishedFragment"
      android:label="GameFinishedFragment" >
    <argument android:name="gameResult"
        app:argType="com.elka.composition.domain.entity.GameResult" />
  </fragment>
</navigation>